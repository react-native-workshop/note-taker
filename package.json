{
  "name": "NoteTaker",
  "version": "0.0.1",
  "private": true,
  "rnpm": {
    "assets": [
      "resources/fonts"
    ]
  },
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "ios": "react-native run-ios",
    "android": "cd android && ./gradlew clean && cd .. && react-native run-android",
    "lint": "eslint app/",
    "lint:fix": "eslint app/ --fix",
    "prepush": "npm run lint && npm run test",
    "postinstall": "rm -rf .git/hooks/pre-push && node node_modules/husky/bin/install.js && rm -rf .git/hooks/pre-commit",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "prepare:dev": "cp index.html web/index.html && rexreplace 'web/' '' web/index.html",
    "compile:dev": "npm run prepare:dev && NODE_ENV='development' webpack-dev-server --progress --config webpack.config.dev.js",
    "compile:prod": "NODE_ENV='production' webpack -p --config webpack.config.prod.js"
  },
  "dependencies": {
    "react": "16.0.0-alpha.12",
    "react-dom": "16.0.0-rc.3",
    "react-native": "0.46.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-react-native": "2.1.0",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-react-native": "^2.3.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "husky": "^0.14.3",
    "jest": "20.0.3",
    "react-hot-loader": "3.0.0-beta.7",
    "react-test-renderer": "16.0.0-alpha.6",
    "rexreplace": "^2.2.3",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "preset": "react-native",
    "cacheDirectory": "./cache",
    "coveragePathIgnorePatterns": [
      "./app/utils/vendor"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0
      }
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!react-native|react-clone-referenced-element|react-navigation)"
    ]
  }
}
